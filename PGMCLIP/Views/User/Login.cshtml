@model PGMCLIP.Models.User
    @{ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="row">
    <div class="col-md-12">

    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">

            <div class="form-horizontal">
                <div class="text-right">
                    <br>
                    <h3>Bienveni2 a mi página, terrícolas</h3>
                    <br>
                </div>   <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre de Usuario</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.usuario, htmlAttributes: new { @class = "form-control", @id = "usuario" })
                        @Html.ValidationMessageFor(model => model.usuario)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Password</label>
                    <div class="col-sm-6">
                        @Html.PasswordFor(model => model.contraseña, htmlAttributes: new { @class = "form-control", @id = "contraseña" })
                        @Html.ValidationMessageFor(model => model.contraseña)

                    </div>
                </div>

                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Ingresar
                        </button>


                    </div>
                </div>


            </div>
        </div>
    </div>

}


