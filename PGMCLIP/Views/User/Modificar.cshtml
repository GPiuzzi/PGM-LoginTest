@model PGMCLIP.Models.User
@{
    ViewBag.Title = "Modificar";
}

<h2>Modificar Usuario por Búsqueda</h2>
<br>

    <!-- Button trigger modal consulta -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#popup2" align="center">
        Búqueda de usuarios
    </button>

    <!-- Modal -->
    <div class="modal fade" id="popup2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" align="center">
                    Busca el usuario aquí
                    <nav class="navbar navbar-light bg-light">
                        <form class="form-inline">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success my-2 my-sm-0" id="buscar" type="submit">Search</button>
                        </form>
                    </nav>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Usuario</label>
                    <div class="col-sm-6">

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre</label>
                    <div class="col-sm-6">

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Apellido</label>
                    <div class="col-sm-6">

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Dirección</label>
                    <div class="col-sm-6">

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Teléfono</label>
                    <div class="col-sm-6">

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">E-Mail</label>
                    <div class="col-sm-6">

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Contraseña</label>
                    <div class="col-sm-6">

                    </div>
                </div>

                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Modificar
                        </button>


                    </div>
                </div>
            </div>
        </div>

    </div>
</div>